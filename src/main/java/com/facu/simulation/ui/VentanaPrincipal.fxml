<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.ToggleSwitch?>

<BorderPane styleClass="root" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.facu.simulation.ui.VentanaPrincipalController">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
    
    <top>
        <!-- Layout principal horizontal optimizado para pantalla completa -->
        <HBox spacing="30.0" alignment="CENTER" HBox.hgrow="ALWAYS">
            <!-- COLUMNA 1: Panel de Configuración (Izquierda) - Expandido -->
            <VBox spacing="15.0" styleClass="panel-configuracion" prefWidth="650.0" HBox.hgrow="ALWAYS">
                <Label styleClass="label-titulo-principal" text="Configuración de Simulación" />
                <GridPane fx:id="panelConfiguracion" hgap="25.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" prefWidth="200.0" />
                        <ColumnConstraints hgrow="ALWAYS" prefWidth="200.0" />
                        <ColumnConstraints hgrow="ALWAYS" prefWidth="200.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="15.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="15.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <!-- Fila 1 -->
                        <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <Label styleClass="label-input" text="Tiempo Descarga Min (dias)" />
                            <TextField fx:id="txtTiempoDescargaMin" prefHeight="35.0" />
                        </VBox>
                        <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Label styleClass="label-input" text="Media Llegada (dia)" />
                            <TextField fx:id="txtMediaLlegada" prefHeight="35.0" />
                        </VBox>
                        <VBox spacing="8.0" GridPane.columnIndex="2" GridPane.rowIndex="0">
                            <Label styleClass="label-input" text="Días de Simulación" />
                            <TextField fx:id="txtDiasSimulacion" prefHeight="35.0" />
                        </VBox>
                        
                        <!-- Fila 2 -->
                        <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <Label styleClass="label-input" text="Tiempo Descarga Max (dias)" />
                            <TextField fx:id="txtTiempoDescargaMax" prefHeight="35.0" />
                        </VBox>
                        <HBox fx:id="panelFiltroDia" spacing="15.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1">
                            <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                <Label styleClass="label-input" text="Mostrar desde (día)" />
                                <TextField fx:id="txtMostrarDesde" prefHeight="35.0" />
                            </VBox>
                            <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                <Label styleClass="label-input" text="Mostrar hasta (día)" />
                                <TextField fx:id="txtMostrarHasta" prefHeight="35.0" />
                            </VBox>
                        </HBox>
                    </children>
                </GridPane>
                
                <!-- Fila adicional para Semilla y filtros por fila -->
                <GridPane hgap="25.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" prefWidth="200.0" />
                        <ColumnConstraints hgrow="ALWAYS" prefWidth="200.0" />
                        <ColumnConstraints hgrow="ALWAYS" prefWidth="200.0" />
                    </columnConstraints>
                    <children>
                        <VBox spacing="8.0" GridPane.columnIndex="0">
                            <Label styleClass="label-input" text="Semilla (Seed)" />
                            <TextField fx:id="txtSeed" promptText="Opcional" prefHeight="35.0" />
                        </VBox>
                        <HBox fx:id="panelFiltroFila" spacing="15.0" GridPane.columnIndex="1" GridPane.columnSpan="2">
                            <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                <Label styleClass="label-input" text="Mostrar desde (fila)" />
                                <TextField fx:id="txtMostrarFilaDesde" prefHeight="35.0" />
                            </VBox>
                            <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                <Label styleClass="label-input" text="Mostrar hasta (fila)" />
                                <TextField fx:id="txtMostrarFilaHasta" prefHeight="35.0" />
                            </VBox>
                        </HBox>
                    </children>
                </GridPane>
            </VBox>
            
            <!-- COLUMNA 2: Botones y Controles (Centro) - Más espacio -->
            <VBox alignment="CENTER" spacing="20.0" styleClass="panel-controles" prefWidth="200.0">
                <Button fx:id="btnSimular" maxWidth="Infinity" styleClass="boton-simular" text="Simular" prefHeight="45.0" />
                <Button fx:id="btnReset" maxWidth="Infinity" styleClass="boton-reset" text="Reset" prefHeight="45.0" />
                <Separator />
                <VBox spacing="8.0" alignment="CENTER">
                    <Label styleClass="label-input" text="Mostrar por Fila" />
                    <ToggleSwitch fx:id="toggleFiltrarPorFila" />
                </VBox>
                <ProgressIndicator fx:id="progressIndicator" maxHeight="35.0" maxWidth="35.0" />
            </VBox>
            
            <!-- COLUMNA 3: Panel de Métricas (Derecha) - Expandido -->
            <HBox spacing="20.0" styleClass="panel-metricas" prefWidth="750.0" HBox.hgrow="ALWAYS">
                <!-- Tiempo de Permanencia -->
                <VBox spacing="15.0" styleClass="metric-card" HBox.hgrow="ALWAYS" prefWidth="350.0">
                    <Label styleClass="label-titulo-seccion" text="Tiempo de permanencia de barcos en bahía:" />
                    <HBox spacing="25.0" alignment="CENTER">
                        <VBox spacing="8.0" alignment="CENTER">
                            <Label styleClass="label-metrica-titulo" text="Mínimo" />
                            <Label fx:id="lblTiempoPermanciaMin" styleClass="valor-metrica-grande" text="--" />
                            <Label styleClass="label-unidad" text="días" />
                        </VBox>
                        <VBox spacing="8.0" alignment="CENTER">
                            <Label styleClass="label-metrica-titulo" text="Máximo" />
                            <Label fx:id="lblTiempoPermanciaMax" styleClass="valor-metrica-grande" text="--" />
                            <Label styleClass="label-unidad" text="días" />
                        </VBox>
                        <VBox spacing="8.0" alignment="CENTER">
                            <Label styleClass="label-metrica-titulo" text="Promedio" />
                            <Label fx:id="lblTiempoPermanciaMedia" styleClass="valor-metrica-grande" text="--" />
                            <Label styleClass="label-unidad" text="días" />
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Grado de Utilización -->
                <VBox spacing="15.0" styleClass="metric-card" HBox.hgrow="ALWAYS" prefWidth="380.0">
                    <Label styleClass="label-titulo-seccion" text="Grado de Utilización de Recursos" />
                    <GridPane hgap="30" vgap="20" alignment="CENTER">
                        <columnConstraints>
                            <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" minWidth="160.0" />
                            <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" minWidth="160.0" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints valignment="CENTER" vgrow="ALWAYS" minHeight="50.0" />
                            <RowConstraints valignment="CENTER" vgrow="ALWAYS" minHeight="50.0" />
                        </rowConstraints>
                        <children>
                            <VBox alignment="CENTER" spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <Label styleClass="label-metrica-titulo" text="Muelle 1" />
                                <HBox alignment="CENTER" spacing="5.0">
                                    <Label fx:id="lblUtilizacionMuelle1" styleClass="valor-metrica-utilizacion" text="--" />
                                    <Label styleClass="label-unidad" text="\%" />
                                </HBox>
                            </VBox>
                            <VBox alignment="CENTER" spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <Label styleClass="label-metrica-titulo" text="Grúa 1" />
                                <HBox alignment="CENTER" spacing="5.0">
                                    <Label fx:id="lblUtilizacionGrua1" styleClass="valor-metrica-utilizacion" text="--" />
                                    <Label styleClass="label-unidad" text="\%" />
                                </HBox>
                            </VBox>
                            <VBox alignment="CENTER" spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                <Label styleClass="label-metrica-titulo" text="Muelle 2" />
                                <HBox alignment="CENTER" spacing="5.0">
                                    <Label fx:id="lblUtilizacionMuelle2" styleClass="valor-metrica-utilizacion" text="--" />
                                    <Label styleClass="label-unidad" text="\%" />
                                </HBox>
                            </VBox>
                            <VBox alignment="CENTER" spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                <Label styleClass="label-metrica-titulo" text="Grúa 2" />
                                <HBox alignment="CENTER" spacing="5.0">
                                    <Label fx:id="lblUtilizacionGrua2" styleClass="valor-metrica-utilizacion" text="--" />
                                    <Label styleClass="label-unidad" text="\%" />
                                </HBox>
                            </VBox>
                        </children>
                    </GridPane>
                </VBox>
            </HBox>
        </HBox>
    </top>

    <center>
        <!-- Tabla de resultados -->
        <TableView fx:id="tablaVectorEstado" VBox.vgrow="ALWAYS">
            <placeholder>
                <Label text="No hay datos para mostrar. Por favor, ejecute una simulación." />
            </placeholder>
            <BorderPane.margin>
                <Insets top="20.0" />
            </BorderPane.margin>
        </TableView>
    </center>
</BorderPane>